<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF0000"/> <!-- Color when pressed -->
            <corners android:radius="50dp"/> <!-- Rounded corners -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000"/> <!-- Normal button color -->
            <corners android:radius="50dp"/> <!-- Rounded corners -->
        </shape>
    </item>
</selector>